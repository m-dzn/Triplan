<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.triplan.mapper.CouponMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="couponId">
        INSERT INTO coupon (
            coupon_id,
            name,
            num,
            price,
            condition,
            expired_at
        ) VALUES (
            #{name},
            #{num},
            #{price},
            #{condition},
            #{expiredAt}
        )
    </insert>

    <select id="select" resultType="CouponVO">
        SELECT  *
        FROM    coupon
        WHERE   coupon_id = #{couponId}
    </select>

    <update id="update">
        UPDATE  coupon
        SET
                name                = IFNULL(   #{name},            name                ),
                num                 = IFNULL(   #{num},             num                 ),
                price               = IFNULL(   #{price},           price               ),
                condition           = IFNULL(   #{condition},       condition           ),
                expired_at          = IFNULL(   #{expiredAt},       expired_at          )
        WHERE
                coupon_id = #{couponId}
    </update>

    <delete id="delete">
        DELETE
        FROM    coupon
        WHERE   coupon_id = #{couponId}
    </delete>

    <select id="selectByNum" resultType="CouponVO">
        SELECT  *
        FROM    coupon
        WHERE   num = #{num}
    </select>

</mapper>
